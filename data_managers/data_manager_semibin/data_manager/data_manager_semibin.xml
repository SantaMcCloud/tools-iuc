<tool id="data_manager_semibin" name="Download reference genomes (GTDB) for SemiBin" tool_type="manage_data" version="@TOOL_VERSION@+galaxy@VERSION_SUFFIX@" profile="@PROFILE@">
    <description></description>
    <requirements>
        <requirement type="package" version="@TOOL_VERSION@">semibin</requirement>
        <requirement type="package" version="@TOOL_VERSION2@">mmseqs2</requirement>
    </requirements>
    <macros>
        <token name="@TOOL_VERSION@">1.1.1</token>
        <token name="@TOOL_VERSION2@">17.b804f</token>
        <token name="@VERSION_SUFFIX@">0</token>
        <token name="@PROFILE@">21.01</token>
    </macros>
    <command detect_errors="exit_code"><![CDATA[
    python '$__tool_directory__/data_manager_semibin.py'
        #if $select == 'test':
            --test
        #else if $select == 'mmseq':
            --mmseq
        #end if
        --json '$out_file'
    ]]></command>
    <inputs>
        <param name="select" type="select" value="Tool for downlaod">
            <option value="semibin">SemiBin</option>
            <option value="mmseq">MMseqs2</option>
            <option value="test">TEST RUN</option>
        </param>
    </inputs>
    <outputs>
        <data name="out_file" format="data_manager_json"/>
    </outputs>
    <tests>
    <test expect_num_outputs="1">
        <param name="select" value="test"/>
        <output name="out_file">
            <assert_contents>
                <has_text text="test"/>
                <has_text text="Test"/>
            </assert_contents>
        </output>
    </test>
    </tests>
    <help><![CDATA[
This tool downloads reference genomes (GTDB) for SemiBin

This can either be with SemiBin but this tool only downlaod the GTDB v95 or with MMseqs2 which downlaod always the latest version of GTDB.

NOTE: When using MMseqs2 it can take up to at least one day till it is finish!
    ]]></help>
    <citations>
        <citation type="doi">10.1038/s41467-022-29843-y</citation>
    </citations>
</tool>
